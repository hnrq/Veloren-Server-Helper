#!/bin/bash

while getopts ":f:n:" opt; do
    case $opt in
    f)
        FORCE_UPDATE="true"
        ;;
    n)
        SERVER_NAME="$OPTARG"
        ;;
    \?)
        echo "Invalid option -$OPTARG" >&2
        exit 1
        ;;
    esac

    case $OPTARG in
    -*)
        echo "Option $opt needs a valid argument"
        exit 1
        ;;
    esac
done

REMOTE_VER="$(curl -s 'https://download.veloren.net/version/linux/aarch64/nightly')"
DIR="/srv/veloren/${SERVER_NAME:-"production"}"
FORCE_UPDATE="false"
FILENAME="veloren-aarch64"
CURRENT_VER=$(cat "$DIR"/version 2>&-)

mkdir -p "$DIR"

if [[ $REMOTE_VER == $CURRENT_VER && $FORCE_UPDATE == "false" ]]; then
    echo -e "\e[32m\e[1mYour server is up-to-date :)\e[0m"
else
    echo "$REMOTE_VER" >"$DIR"/version

    (cd "$DIR" && curl -L -o $FILENAME --connect-timeout 300 \
        --max-time 300 \
        --retry 300 \
        --retry-delay 5 \
        'https://download.veloren.net/latest/linux/x86_64/nightly')

    (cd "$DIR" && unzip -qo $FILENAME)
    (cd "$DIR" && rm -rf $FILENAME)

    systemctl restart "veloren@$SERVER_NAME.service"

    echo -e "\e[32m\e[1mSuccessfully updated server to latest version ($REMOTE_VER)\e[0m"
fi
